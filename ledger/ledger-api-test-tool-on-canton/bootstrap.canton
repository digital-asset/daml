import com.digitalasset.canton.config.TimeoutDuration
import com.digitalasset.canton.time.NonNegativeFiniteDuration

nodes.local.start

test_domain.service.update_dynamic_domain_parameters(_.update(
  ledgerTimeRecordTimeTolerance = NonNegativeFiniteDuration.ofMinutes(3),
  mediatorReactionTimeout = TimeoutDuration.ofMinutes(1),
  participantResponseTimeout = TimeoutDuration.ofMinutes(1),
  ),
  force = true,
)

participants.local foreach (_.domains.connect_local(test_domain))

utils.retry_until_true {
  participants.local forall (_.domains.active(test_domain.name))
}
