module Foo where

template Foo1
  with
    signatory : Party
    observers : [Party]
    payload : Text
  where
    signatory signatory
    observer observers

    nonconsuming choice Foo1_NonconsumingChoice: ()
      with
        exercisePayload: Text
      controller signatory
      do
        return ()

    choice Foo1_ConsumingChoice: ()
      with
          exercisePayload: Text
      controller signatory
      do
          return ()

