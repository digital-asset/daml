load(
    "//rules_daml:daml.bzl",
    "daml_compile",
)
load(
    "//bazel_tools:scala.bzl",
    "da_scala_library",
)
load(
    "//language-support/scala/codegen:codegen.bzl",
    "dar_to_scala",
)

da_scala_library(
    name = "test-common",
    srcs = glob(["src/main/scala/**/*.scala"]),
    visibility = [
        "//visibility:public",
    ],
    deps = [
        "//ledger-api/grpc-definitions:ledger-api-scalapb",
    ],
)

daml_compile(
    name = "SemanticTests",
    main_src = "src/main/daml/SemanticTests.daml",
    visibility = ["//visibility:public"],
)

dar_to_scala(
    name = "SemanticTests.scala-codegen",
    srcs = [":SemanticTests.dar"],
    package_prefix = "com.digitalasset.ledger.test",
    srcjar_out = "SemanticTests.scala.srcjar",
    verbosity = 2,
    visibility = ["//visibility:public"],
)

da_scala_library(
    name = "SemanticTests.scala",
    srcs = [":SemanticTests.scala-codegen"],
    visibility = ["//visibility:public"],
    deps = [
        "//language-support/scala/bindings",
    ],
)

daml_compile(
    name = "Test-latest",
    main_src = "src/main/daml/Test.daml",
    visibility = ["//visibility:public"],
)

dar_to_scala(
    name = "Test-latest.scala-codegen",
    srcs = [":Test-latest.dar"],
    package_prefix = "com.digitalasset.ledger.test_latest",
    srcjar_out = "Test-latest.scala.srcjar",
    verbosity = 2,
    visibility = ["//visibility:public"],
)

da_scala_library(
    name = "Test-latest.scala",
    srcs = [":Test-latest.scala-codegen"],
    visibility = ["//visibility:public"],
    deps = [
        "//language-support/scala/bindings",
    ],
)

daml_compile(
    name = "Test-dev",
    main_src = "src/main/daml/Test.daml",
    target = "1.dev",
    visibility = ["//visibility:public"],
)

dar_to_scala(
    name = "Test-dev.scala-codegen",
    srcs = [":Test-dev.dar"],
    package_prefix = "com.digitalasset.ledger.test_dev",
    srcjar_out = "Test.scala.srcjar",
    verbosity = 2,
    visibility = ["//visibility:public"],
)

da_scala_library(
    name = "Test-dev.scala",
    srcs = [":Test-dev.scala-codegen"],
    visibility = ["//visibility:public"],
    deps = [
        "//language-support/scala/bindings",
    ],
