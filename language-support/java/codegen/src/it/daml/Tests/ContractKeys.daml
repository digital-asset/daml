module Tests.ContractKeys where

data PartyAndInt =
  PartyAndInt
    with
      party: Party
      int: Int

template NoKey
  with
    owner : Party
  where
    signatory owner

    choice NoKey_Choice : ()
      controller owner
      do return ()

template PartyKey
  with
    owner : Party
  where
    signatory owner

    key owner: Party
    maintainer key

    choice PartyKey_Choice : ()
      controller owner
      do return ()

template RecordKey
  with
    owner : Party
    number : Int
  where
    signatory owner

    key PartyAndInt owner number : PartyAndInt
    maintainer key.party

    choice RecordKey_Choice : ()
      controller owner
      do return ()

template TupleKey
  with
    owner : Party
    number : Int
  where
    signatory owner

    key (owner, number): (Party, Int)
    maintainer key._1

    choice TupleKey_Choice : ()
      controller owner
      do return ()

template NestedTupleKey
  with
    t1_1 : Party
    t1_2 : Int
    t1_3 : Text
    t2_1 : Int
    t2_2 : Bool
    t2_3 : Text
    t2_4 : Int
  where
    signatory t1_1

    key ((t1_1, t1_2, t1_3), (t2_1, t2_2, t2_3, t2_4)): ((Party, Int, Text), (Int, Bool, Text, Int))
    maintainer key._1._1

    choice NestedTupleKey_Choice : ()
      controller t1_1
      do return ()
