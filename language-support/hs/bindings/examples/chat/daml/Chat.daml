module Chat where

template Introduce
    with
        from : Party
        people : [Party]
    where
        signatory from
        observer people

template Message
    with
        from : Party
        to : Party
        body: Text
    where
        signatory from
        observer to

template Broadcast
    with
        from : Party
        to : [Party]
        body: Text
    where
        signatory from
        observer to
