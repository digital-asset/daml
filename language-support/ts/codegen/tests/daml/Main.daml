daml 1.2
module Main where

import DA.TextMap
import Lib.Mod

data AllTypes = AllTypes {
  unit: ();
  bool: Bool;
  int: Int;
  text: Text;
  date: Date;
  time: Time;
  party: Party;
  contractId: ContractId Person;
  optional: Optional Int;
  list: [Bool];
  textMap: TextMap Party;
  monoRecord: Person;
  polyRecord: Pair Date Time;
  imported: Imported;
  archive: Archive;
  either: Either Int Text;
  tuple: (Date, Time)
}

template Person with
    name: Text
    party: Party
    age: Int
  where
    signatory party

    choice Birthday: ContractId Person
      controller party
      do
        create this with age = age+1

data Pair a b = Pair {
  one: a;
  two: b
}

data Bar a = Bar {
  u: a
}
data Foo a b = Foo {
  x: Bar a;
  y: Foo b a;
  z: b
}
