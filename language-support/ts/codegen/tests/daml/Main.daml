daml 1.2
module Main where

import DA.TextMap
import Lib.Mod


template AllTypes with
    unit: ()
    bool: Bool
    int: Int
    text: Text
    date: Date
    time: Time
    party: Party
    contractId: ContractId Person
    optional: Optional Int
    list: [Bool]
    textMap: TextMap Int
    monoRecord: Person
    polyRecord: Pair Int Text
    imported: Imported
    archiveX: Archive
    either: Either Int Text
    tuple: (Int, Text)
    enum: Color
    enumList: [Color]
  where
    signatory party

template Person with
    name: Text
    party: Party
    age: Int
  where
    signatory party

    key (party, age): (Party, Int)
    maintainer key._1

    choice Birthday: ContractId Person
      controller party
      do
        create this with age = age+1

data Pair a b = Pair {
  one: a;
  two: b
} deriving (Eq, Show)

data Bar a = Bar {
  u: a
}
data Foo a b = Foo {
  x: Bar a;
  y: Foo b a;
  z: b
}

data Color = Red | Blue | Yellow deriving (Eq, Show)
