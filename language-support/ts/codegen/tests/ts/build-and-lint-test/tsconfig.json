
{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
     ],
    "esModuleInterop": true,
    "incremental": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib/",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true
    },
  "include": ["src/**/*.ts"]
}
