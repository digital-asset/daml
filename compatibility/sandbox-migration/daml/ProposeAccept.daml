module ProposeAccept where

template ProposeDeal
  with
    proposer : Party
    accepter : Party
    note : Text
  where
    signatory proposer
    observer accepter
    choice Accept : ContractId Deal
      controller accepter
      do create Deal with ..

template Deal
  with
    proposer : Party
    accepter : Party
    note : Text
  where
    signatory [proposer, accepter]
    choice UnilateralArchive : ()
      controller proposer
      do pure ()

