{
  "compilerOptions": {
    "baseUrl": "language-support/ts",
    "paths": {
      "@daml/types": ["daml-types/index"]
    },
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true
  }
}
