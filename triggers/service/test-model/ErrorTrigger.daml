module ErrorTrigger where

import Daml.Trigger

trigger : Trigger ()
trigger = Trigger with
  initialize = pure ()
  updateState = \_ -> pure ()
  rule = triggerRule
  registeredTemplates = AllInDar
  heartbeat = None

triggerRule : Party -> TriggerA () ()
triggerRule _ = error "Intentional error"
