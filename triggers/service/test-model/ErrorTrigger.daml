module ErrorTrigger where

import DA.Action
import DA.Foldable
import DA.Next.Map (Map)
import Daml.Trigger

trigger : Trigger ()
trigger = Trigger with
  initialize = \_ -> ()
  updateState = \_ _ _ -> ()
  rule = triggerRule
  registeredTemplates = AllInDar
  heartbeat = None

triggerRule : Party -> ACS -> Time -> Map CommandId [Command] -> () -> TriggerA ()
triggerRule _ _ _ _ _ = error "Intentional error"
