<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg %replace(, context: %marker){', context: $', ''} %n</pattern>
        </encoder>
    </appender>

    <logger name="io.netty" level="WARN">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="io.grpc.netty" level="WARN">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.daml.lf.engine.trigger" level="INFO" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="com.daml.lf.engine.trigger.Runner" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>
    <logger name="daml.tracelog" level="DEBUG" additivity="false">
        <appender-ref ref="STDOUT"/>
    </logger>

    <root level="OFF">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
