module InterfaceTriggers where

import Daml.Trigger

data View = View { num: Int, label: Text }

interface I where
  viewtype View

  getOwner: Party
  getTag: Text

template A
  with
    owner: Party
    tag: Text
  where
    signatory owner
    interface instance I for A where
      view = View with
        num = 0
        label = tag

      getOwner = owner
      getTag = tag

template B
  with
    owner: Party
    tag: Text
  where
    signatory owner
    interface instance I for B where
      view = View with
         num = 1
         label = tag

      getOwner = owner
      getTag = tag

globalTrigger: Trigger ()
globalTrigger = Trigger with
  initialize = do
    debug "globalTrigger initialize"
    pure ()
  updateState = \_ -> do
    debug "globalTrigger updateState"
    pure ()
  rule = \_ -> do
    debug "globalTrigger rule"
    pure ()
  registeredTemplates = AllInDar
  heartbeat = None

triggerWithRegistration: Trigger ()
triggerWithRegistration = Trigger with
