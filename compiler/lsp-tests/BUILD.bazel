load("//bazel_tools:haskell.bzl", "da_haskell_binary", "da_haskell_test")
load("@os_info//:os_info.bzl", "is_windows")

da_haskell_test(
    name = "lsp-tests",
    srcs = glob(["src/**/*.hs"]),
    data = [
        "//daml-foundations/daml-tools/da-hs-damlc-app",
    ],
    # For some reason this test sometimes seems to time out on Windows.
    # It hits the Bazel timeout rather than the timeout in lsp-tests
    # so it looks like it locks up somehow.
    # The stress tests also seem to be flaky on other platforms,
    # see https://github.com/digital-asset/daml/issues/1890.
    # There we get an actual timeout from lsp-test.
    flaky = True,
    hazel_deps = [
        "aeson",
        "base",
        "containers",
        "extra",
        "filepath",
        "haskell-lsp",
        "haskell-lsp-types",
        "lens",
        "lsp-test",
        "mtl",
        "network-uri",
        "parser-combinators",
        "tasty",
        "tasty-hunit",
        "text",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "//compiler/hie-core",
        "//daml-foundations/daml-ghc/ide",
        "//daml-foundations/daml-ghc/test-lib",
        "//libs-haskell/bazel-runfiles",
    ],
)
