                   , bytestring
                   , test-framework >= 0.3.3
                   , test-framework-quickcheck2
                   , test-framework-hunit
                   , HUnit
                   , QuickCheck >= 2.4.0.1
                   , pem

source-repository head
  type: git
  location: git://github.com/vincenthz/hs-pem

