load("//bazel_tools:haskell.bzl", "da_haskell_library", "da_haskell_test")
load("//bazel_tools:proto.bzl", "proto_gen")

proto_library(
    name = "repl_service_proto",
    srcs = ["repl_service.proto"],
    visibility = ["//visibility:public"],
    deps = [],
)

proto_gen(
    name = "repl_service_java_proto_src",
    srcs = [":repl_service_proto"],
    plugin_name = "java",
    visibility = ["//visibility:public"],
)

proto_gen(
    name = "repl_service_java_proto_grpc_src",
    srcs = [":repl_service_proto"],
    plugin_exec = "@io_grpc_grpc_java//compiler:grpc_java_plugin",
    plugin_name = "java-grpc",
    visibility = ["//visibility:public"],
)

# FIXME(JM): java_grpc_library should do this for us,
# but cannot quite make it work. Also not sure if it
# makes sense to mix the //3rdparty dependencies with
# the stuff it pulls in...
java_library(
    name = "repl_service_java_proto",
    srcs = [
        ":repl_service_java_proto_grpc_src",
        ":repl_service_java_proto_src",
    ],
    visibility = ["//visibility:public"],
    deps = [
        "@maven//:com_google_guava_guava",
        "@maven//:com_google_protobuf_protobuf_java",
        "@maven//:io_grpc_grpc_api",
        "@maven//:io_grpc_grpc_core",
        "@maven//:io_grpc_grpc_protobuf",
        "@maven//:io_grpc_grpc_stub",
    ],
)

# FIXME(JM): Modify compile-proto-file to allow specifying
# the output file and module name rather than directory.
genrule(
    name = "repl_service_haskell_proto_src",
    srcs = ["repl_service.proto"],
    outs = ["ReplService.hs"],
    cmd = """
    ORIGPWD=$$PWD
    cd compiler/repl-service/protos
    $$ORIGPWD/$(location @proto3_suite//:compile-proto-file) \
      --proto repl_service.proto --out "$$ORIGPWD/$(@D)"
  """,
    tools = [
        "@proto3_suite//:compile-proto-file",
    ],
)

da_haskell_library(
    name = "repl_service_haskell_proto",
    srcs = [":repl_service_haskell_proto_src"],
    hackage_deps = [
        "base",
        "bytestring",
        "containers",
        "deepseq",
        "grpc-haskell",
        "grpc-haskell-core",
        "proto3-suite",
        "proto3-wire",
        "text",
        "vector",
    ],
    visibility = ["//visibility:public"],
)
