module DvpNotification
where

import DvpTerms

type DvpNotificationId = ContractId DvpNotification

template DvpNotification
  with
    c : DvpTerms
  where
    ensure isValidDvp c
    signatory c.seller
    observer c.buyer

    choice Accept : ()
      controller c.buyer
      do return ()
