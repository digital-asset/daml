module DvpTerms where

isValidDvp : DvpTerms -> Bool
isValidDvp dvp = dvp.bondAmount > 0.0 && dvp.cashAmount > 0.0

data DvpTerms = DvpTerms
  with
    buyer : Party
    seller : Party
    bondIssuer : Party
    bondIsin : Text
    bondAmount : Decimal
    cashIssuer : Party
    cashCurrency : Text
    cashAmount : Decimal
    settleTime : Time
    dvpId : Text
  deriving (Eq, Show)
