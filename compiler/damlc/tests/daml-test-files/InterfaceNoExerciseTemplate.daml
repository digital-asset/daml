-- @SINCE-LF-FEATURE DAML_INTERFACE

module InterfaceNoExerciseTemplate where

data EmptyInterfaceView = EmptyInterfaceView {}

interface Token where
  viewtype EmptyInterfaceView

  getOwner : Party
  getAmount : Int
  setAmount : Int -> Token

  choice GetRich : ContractId Token
    with
      byHowMuch : Int
    controller getOwner this
    do
        assert (byHowMuch > 0)
        create $ setAmount this (getAmount this + byHowMuch)

template Asset
  with
    issuer : Party
    owner : Party
    amount : Int
  where
    signatory owner

    interface instance Token for Asset where
      view = EmptyInterfaceView
      getOwner = owner
      getAmount = amount
      setAmount x = toInterface @Token (this with amount = x)

-- @ERROR range=42:3-43:26; Possible Daml-specific reason for the following type error: The choice ‘GetRich’ belongs to interface ‘Token’ which ‘Asset’ implements.
cannotExercise : ContractId Asset -> Update (ContractId Token)
cannotExercise asset = do
  exercise asset GetRich with
    byHowMuch = 1_000_000
