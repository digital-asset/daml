-- A simple example, deliberately encoding in CRLF format
module Simple where

template Person
  with
    person : Party
    name   : Text
  where
    signatory person
    choice Sleep : ()
      controller person
      do return ()

    nonconsuming choice Nap : Int
      with i : Int
      controller person
      do return i

main = scenario do
    alice <- getParty "alice"
    submit alice do
        person <- create $ Person alice "Alice Liddel"
        exercise person $ Nap 10
        exercise person Sleep
