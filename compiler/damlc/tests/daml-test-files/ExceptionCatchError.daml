-- | Test that error (and related primitives) throw a GeneralError.
module ExceptionCatchError where

import Daml.Script
import DA.Assert
import DA.Exception

test1 = script do
    try do
        error "hello"
    catch
        GeneralError msg ->
            msg === "hello"


test2 = script do
    try do
        abort "foo"
    catch
        GeneralError msg ->
            msg === "foo"

test3 = script do
    try do
        fail "bar"
    catch
        GeneralError msg ->
            msg === "bar"
