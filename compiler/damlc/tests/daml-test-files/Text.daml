  None === parseDecimal ""
  None === parseDecimal "."
  None === parseDecimal "-"
  None === parseDecimal "--"
  None === parseDecimal "-."
  None === parseDecimal ".-"
  None === parseDecimal ".-0"
  None === parseDecimal "0.-"
  None === parseDecimal "-.0"
  None === parseDecimal "-0."
  None === parseDecimal "-.1"
  None === parseDecimal "-1."
  None === parseDecimal "--1.1"
  None === parseDecimal "1."
  None === parseDecimal ".1"
  Some 1.0 === parseDecimal "+1"
  Some 1.1 === parseDecimal "+1.1"
  None === parseDecimal "+"
  None === parseDecimal "+."
  None === parseDecimal "+1."
