  None === parseDecimal "++1.1"
  None === parseDecimal "++1"
  None === parseDecimal "+-1.1"
  None === parseDecimal "+-1"
  None === parseDecimal "-+1.1"
  None === parseDecimal "-+1"
  None === parseDecimal " 1.1"
  None === parseDecimal "1.1 "
