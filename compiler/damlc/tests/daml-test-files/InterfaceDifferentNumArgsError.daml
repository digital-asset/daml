-- @ERROR range=27:7-29:24; Equations for method ‘m0’ have different numbers of arguments

module InterfaceDifferentNumArgsError where

data EmptyInterfaceView = EmptyInterfaceView {}

interface I where
  viewtype EmptyInterfaceView
  m0 : Bool -> Bool -> Party

template T
  with
    p0 : Party
    p1 : Party
    p2 : Party
    f : Int
  where
    signatory p0, p1

    interface instance I for T where
      view = EmptyInterfaceView
      m0 False = const p0
      m0 True False = p1
      m0 True True = p2
