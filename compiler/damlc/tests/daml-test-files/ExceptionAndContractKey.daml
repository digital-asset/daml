 -- regression test for https://github.com/digital-asset/daml/pull/14080
module ExceptionAndContractKey where

import DA.Assert ((===))
import DA.Optional (isSome)
import DA.Exception (throw, GeneralError(..))

template K
  with
    sig: Party
  where
    signatory sig
    key sig: Party
    maintainer key

template Op
  with sig: Party
  where
    signatory sig
    choice Go: Bool
      with cid: ContractId K
      controller sig
      do
        exercise cid Archive
        try do
          None <- lookupByKey @K sig
          throw (GeneralError "")
        catch (GeneralError _) -> pure ()
        result <- lookupByKey @K sig
        pure $ isSome result

test = scenario do
  alice <- getParty "alice"
  cid <- submit alice $ create (K alice)
  op <- submit alice $ create (Op alice)
  r <- submit alice $ exercise op (Go cid)
  r === False
