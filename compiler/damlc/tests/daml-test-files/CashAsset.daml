daml 1.2
module CashAsset where

import DA.Record

class (Eq t, HasField "issuer" t Party, HasField "owner" t Party) => Asset t
-- ^ Would like to write this as a constraint synonym but DAML doesn't allow it currently

template Cash
  with
    issuer: Party
    owner: Party
    amount: Decimal
    currency: Text
  where
    signatory issuer, owner

instance Asset Cash
