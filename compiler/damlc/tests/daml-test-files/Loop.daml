module Loop where

import Daml.Script

loop 0 = ()
loop x = loop $ x + 1

template Loop
  with
    p : Party
  where
    signatory p
    choice Go : ()
      controller p
      do pure $ loop 1

-- loop in the ide-ledger
testLoop1: Script ()
testLoop1 = do
    clearUsers
    p <- allocateParty "p"
    mySubmit p $ createAndExerciseCmd (Loop p) Go

