module Newtype where

import Daml.Script
import DA.Assert

newtype Nat = Nat{unNat : Int}

mkNat : Int -> Nat
mkNat i
  | i >= 0 = Nat i
  | otherwise = error "mkNat: negative"

unsafeMkNat : Int -> Nat
unsafeMkNat = Nat

zero0 : Nat
zero0 = Nat 0

one1 : Nat
one1 = Nat{unNat = 1}

unNat1 : Nat -> Int
unNat1 (Nat i) = i

unNat2 : Nat -> Int
unNat2 = unNat

unNat3 : Nat -> Int
unNat3 n = unNat n

main = script do
  unNat zero0 === 0
  unNat1 one1 === 1
  unNat2 (mkNat 2) === 2
  unNat3 (unsafeMkNat 3) === 3
