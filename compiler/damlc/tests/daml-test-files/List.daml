testSortIsStable = scenario do
    let l = [(1, 3), (1,2), (1,1), (1,1), (1,4)]
    let cmp = (compare `on` fst)
    let m = sortBy cmp l
    m === l
    minimumBy cmp l === head m
    maximumBy cmp l === head m -- all `EQ`, returning first
       where on cmp f x y = cmp (f x) (f y)

