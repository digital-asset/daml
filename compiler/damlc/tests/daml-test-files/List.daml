testSort2 = scenario do
    let l = [ 4, 5, 6, 3, 9, 2, 1, 8, 7 ]
    let m = sortBy (\x y -> compare y x) l
    m === reverse [1, 2, 3, 4, 5, 6, 7, 8, 9]
    minimumBy (flip compare) l === head m
    maximumBy (flip compare) l === last m

