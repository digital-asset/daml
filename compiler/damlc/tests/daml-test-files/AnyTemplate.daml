module AnyTemplate where

import DA.Assert

template T1
  with
    x : Int
    p : Party
  where
    signatory p

template T2
  with
    y : Text
    p : Party
  where
    signatory p

main = scenario do
  p <- getParty "Alice"
  let t1 = T1 0 p
  let t2 = T2 "" p
  fromAnyTemplate @T1 (toAnyTemplate t1) === Some t1
  fromAnyTemplate @T2 (toAnyTemplate t1) === None
  fromAnyTemplate @T2 (toAnyTemplate t2) === Some t2
  fromAnyTemplate @T1 (toAnyTemplate t2) === None
