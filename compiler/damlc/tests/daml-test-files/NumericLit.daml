-- Test numeric literals.
--
-- @SINCE-LF 1.dev

daml 1.2

module NumericLit where

import DA.Numeric (pi)

pi0 : Numeric 0
pi0 = 3.0

pi5 : Numeric 5
pi5 = 3.14159

pi10 : Numeric 10
pi10 = 3.14159_26536 -- note the rounding, which is on purpose

pi15 : Numeric 15
pi15 = 3.14159_26535_89793

pi37 : Numeric 37
pi37 = 3.14159_26535_89793_23846_26433_83279_50288_41

piTest = scenario $ do
    assert $ pi == pi0
    assert $ pi == pi5
    assert $ pi == pi10
    assert $ pi == pi15
    assert $ pi == pi37
