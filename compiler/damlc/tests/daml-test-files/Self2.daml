module Self2 where

import Daml.Script
import DA.Assert

template Self2
  with
    p : Party
  where
    signatory p

    nonconsuming choice Foo : Text
      controller p
      do exercise self Bar

    choice Bar : Text
      controller p
      do return "ok"

    choice Baz : Text
      controller p
      do exercise self Bar

main = script do
  alice <- allocateParty "Alice"

  submitMustFail alice do
    cid <- createCmd $ Self2 alice
    exerciseCmd cid Baz -- Attempt to exerciseCmd a contract that was consumed in same transaction.

  r <- submit alice do
    cid <- createCmd $ Self2 alice
    exerciseCmd cid Foo
  r === "ok"
