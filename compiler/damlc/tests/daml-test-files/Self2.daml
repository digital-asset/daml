module Self2 where

import DA.Assert

template Self2
  with
    p : Party
  where
    signatory p

    nonconsuming choice Foo : Text
      controller p
      do exercise self Bar

    choice Bar : Text
      controller p
      do return "ok"

    choice Baz : Text
      controller p
      do exercise self Bar

main = scenario do
  alice <- getParty "Alice"

  submitMustFail alice do
    cid <- create $ Self2 alice
    exercise cid Baz -- Attempt to exercise a contract that was consumed in same transaction.

  r <- submit alice do
    cid <- create $ Self2 alice
    exercise cid Foo
  r === "ok"
