module ScriptReturningUpdate where

import Daml.Script

template T
  with p : Party
  where signatory p

f : Party -> Script (Update (Optional (ContractId T)))
f p = do
  let
    umt = do
      t <- create T with p
      return $ Some t
  submit p $ return umt

s = script do
  p <- allocateParty "P"
  f p
