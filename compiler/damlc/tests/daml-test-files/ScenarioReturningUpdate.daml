module ScenarioReturningUpdate where

template T
  with p : Party
  where signatory p

f : Party -> Scenario (Update (Optional (ContractId T)))
f p = do
  let
    umt = do
      t <- create T with p
      return $ Some t
  submit p $ return umt

s = scenario do
  p <- getParty "P"
  f p
