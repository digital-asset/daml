-- @SINCE-LF-FEATURE DAML_INTERFACE
module InterfaceErrors where

interface MyInterface where
    viewtype ()
    myVirtualChoiceImpl : Update ()
    choice MyVirtualChoice : ()
        controller [] : [Party]
        do
            myVirtualChoiceImpl this

template MyTemplate
    with
        p : Party
    where
        signatory p

-- @ERROR range=22:1-22:17; Attempt to use a contract via an interface that the contract does not implement
fetchBadContract = scenario do
    p <- getParty "Alice"
    p `submit` do
        cid <- create (MyTemplate p)
        let cid' : ContractId MyInterface = coerceContractId cid
        fetch cid'

-- @ERROR range=30:1-30:20; Attempt to use a contract via an interface that the contract does not implement
exerciseBadContract = scenario do
    p <- getParty "Alice"
    p `submit` do
        cid <- create (MyTemplate p)
        let cid' : ContractId MyInterface = coerceContractId cid
        exercise cid' MyVirtualChoice

