-- | This module defines the RelTime newtype
-- which is mapped to a stable LF package.

{-# LANGUAGE GeneralizedNewtypeDeriving #-}
daml 1.2
-- | MOVE DA.Time
module DA.Time.Types
  ( RelTime(..)
  ) where

-- | The `RelTime` type describes a time offset, i.e. relative time.
newtype RelTime =
  RelTime with microseconds : Int
