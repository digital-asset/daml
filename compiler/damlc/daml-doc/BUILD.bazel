    deps = [
        "//compiler/damlc/daml-doc",
        "//compiler/damlc/daml-opts:daml-opts-types",
        "//compiler/damlc/daml-rule-types",
        "//libs-haskell/bazel-runfiles",
        "//libs-haskell/da-hs-base",
        "//libs-haskell/test-utils",
