load(
    "//bazel_tools/client_server_test:client_server_test.bzl",
    "client_server_test",
)
load(
    "//bazel_tools:scala.bzl",
    "da_scala_binary",
)
load("@os_info//:os_info.bzl", "is_windows")

sh_binary(
    name = "client",
    srcs = ["client.sh"],
)

exports_files(["client_input_file"])

da_scala_binary(
    name = "server",
    srcs = ["server.scala"],
    main_class = "Main",
    deps = [
        "//3rdparty/jvm/com/github/scopt",
    ],
)

client_server_test(
    name = "test",
    timeout = "short",
    client = ":client",
    client_args = [
        "--foobar",
        # Use the input file passed in via `data`.
        "$(rlocation $TEST_WORKSPACE/$(rootpath :client_input_file))",
    ],

    # Data files available to both client and server.
    data = [
        ":client_input_file",
    ],
    server = ":server",
)
