module ReinterpretTests where

import DA.Exception (throw)

exception MyError
  where
    message "MyError"

template MySimple
  with p: Party
  where
    agreement show p
    signatory p

    controller p can
      MyHello : Text
        do pure "hello"

    controller p can
      MyThrow : Text
        do throw MyError

template MyEnsuring
  with
    p : Party
    v : Int
  where
    agreement show p
    signatory p
    ensure (v < 50)
