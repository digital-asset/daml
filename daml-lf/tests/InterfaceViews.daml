module InterfaceViews where

data View = View with
  a : Int
  b : Bool

interface I where
    viewtype View

interface INoView where
    viewtype ()

template T1
  with
    p : Party
    a : Int
  where
    signatory p
    implements I where
      view = View with
        a
        b = True
    implements INoView where
      view = ()

template T2
  with
    p : Party
    a : Int
  where
    signatory p
    implements I where
      view = View with
        a
        b = False

template T3
  with
    p : Party
    a : Int
  where
    signatory p
    implements I where
      view = error "view crashed"

template T4
  with
    p : Party
    a : Int
  where
    signatory p
