module InterfaceViews where

data View = View with
  a : Int
  b : Bool

interface I where
    viewtype View

template T1
  with
    p : Party
    a : Int
  where
    signatory p
    interface instance I for T1 where
      view = View with
        a
        b = True

template T2
  with
    p : Party
    a : Int
  where
    signatory p
    interface instance I for T2 where
      view = View with
        a
        b = False

template T3
  with
    p : Party
    a : Int
  where
    signatory p
    interface instance I for T3 where
      view = error "view crashed"

template T4
  with
    p : Party
    a : Int
  where
    signatory p
