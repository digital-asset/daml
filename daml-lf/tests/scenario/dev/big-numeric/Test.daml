module Test where

import qualified DA.BigNumeric as BigNumeric

template BigNumericResults
  with
    party: Party
    values: [Numeric 10]
  where
    signatory party

x : BigNumeric
x = BigNumeric.fromNumeric (0.5: Numeric 10)

run = scenario do
  alice <- getParty "Alice"
  submit alice do
     create BigNumericResults with
        party = alice
        values = map BigNumeric.toNumeric [
              x + x
            , negate x
            , x * x
            , BigNumeric.round 0 BigNumeric.roundingUp x
            , BigNumeric.round 0 BigNumeric.roundingDown x
            , BigNumeric.round 0 BigNumeric.roundingHalfUp x
            , BigNumeric.round 0 BigNumeric.roundingCeiling (negate x)
          ]
