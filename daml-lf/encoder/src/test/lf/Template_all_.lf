module TemplateMod {

  record @serializable Person = { person: Party, name: Text } ;

  template (this : Person) =  {
    precondition True,
    signatories Cons @Party [TemplateMod:Person {person} this] (Nil @Party),
    observers (Nil @Party),
    agreement "Agreement",
    choices {
      choice Sleep (u: Unit) : Unit
        by Cons @Party [TemplateMod:Person {person} this] (Nil @Party)
        to upure @Unit u,
      choice @nonConsuming Nap (i : Int64): Int64
        by Cons @Party [TemplateMod:Person {person} this] (Nil @Party)
        to upure @Int64 i
    }
  } ;

}