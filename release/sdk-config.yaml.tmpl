version: __VERSION__
commands:
- name: studio
  path: daml-helper/daml-helper
  desc: "Launch DAML studio"
  args: ["studio"]
- name: new
  path: daml-helper/daml-helper
  desc: "Create a new project"
  args: ["new"]
- name: build
  path: damlc/da-hs-damlc-app
  args: ["build"]
  desc: "Build project"
- name: start
  path: daml-helper/daml-helper
  args: ["start"]
  desc: "Run sandbox and navigator in project"
- name: damlc
  path: damlc/da-hs-damlc-app
  desc: "Launch the DAML compiler"
- name: sandbox
  path: daml-helper/daml-helper
  desc: "Launch the sandbox"
  args: ["run-jar", "sandbox/sandbox.jar"]
- name: navigator
  path: daml-helper/daml-helper
  desc: "Launch the navigator"
  args: ["run-jar", "navigator/navigator.jar"]
- name: extractor
  path: daml-helper/daml-helper
  desc: "Launch the extractor"
  args: ["run-jar", "extractor/extractor.jar"]
- name: ide
  path: damlc/da-hs-damlc-app
  args: ["lax", "ide"]
