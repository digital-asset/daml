-- Test that foo does not overflow
-- @QUERY-LF $pkg | .modules[] | .values[] | select(.name_with_type | lf::get_value_name($pkg) == ["foo"]) | .expr.builtin_lit | lf::get_int64($pkg) == "1"

-- Test that Daml-LF can hold maxBound :: Int64
-- @QUERY-LF $pkg | .modules[] | .values[] | select(.name_with_type | lf::get_value_name($pkg) == ["bar"]) | .expr.builtin_lit | lf::get_int64($pkg) == "9223372036854775807"

module UseInteger where

import Daml.Script
import DA.Assert

foo = 1
bar = 9223372036854775807 -- maxBound :: Int64 (*)

main = script do
  foo === 1
  0 - foo - bar === 0 - 2^62 - 2^62 -- minBound :: Int64
