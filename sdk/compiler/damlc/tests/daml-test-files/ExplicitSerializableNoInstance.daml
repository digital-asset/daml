-- @BUILD-OPTION --explicit-serializable=yes
-- @ERROR range=13:10-13:15; No instance for (Serializable Currency)
module ExplicitSerializableNoInstance where

data Currency = Currency with
  admin : Party
  instrument : Int
    deriving (Eq, Show)

template Asset
  with
    party : Party
    currency : Currency
    amount : Decimal
  where
    signatory party
