module QueryNByKey where

-- import Daml.Script

template WithKey
  with
    p : Party
  where
    signatory p
    key p : Party
    maintainer key

template Helper
  with
    p : Party
  where
    signatory p
    choice PerformQuery : ()
      controller p
      do contracts <- queryNByKey @WithKey 1 p
         case contracts of
           (contract :: _) -> do
             pure ()
           [] ->
             abort "Assertion failed: queryNByKey returned an empty list."

