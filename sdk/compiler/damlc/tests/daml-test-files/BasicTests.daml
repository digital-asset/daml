  uncons [3,2,1] ==
    (Some (3, [2,1]))

template Simple
  with p: Party
  where
    signatory p

    choice Hello : Text
      controller p
      do pure "hello"

template SimpleMultiParty
  with
    p1: Party
    p2: Party
  where
    signatory p1, p2

    choice HelloMultiParty : Text
      controller p1, p2
      do pure "Hello multi-party"


template Composite
   with p1: Party
   where
     signatory p1

     choice First : Text
       controller p1
       do cid <- create Simple with p = p1
          cid2 <- exercise cid Hello
          pure "hello"


