template PayOut
  with
    receiver: Party
    giver: Party
  where
    signatory receiver
    signatory giver


template CallablePayout
  with
    giver: Party
    receiver: Party
  where
    signatory giver
    observer receiver
    choice Call : ContractId PayOut
      controller receiver
      do create PayOut with receiver; giver
    choice Transfer : ContractId CallablePayout
      with newReceiver: Party
      controller receiver
      do create this with receiver = newReceiver



test_payoutTest : Script (ContractId CallablePayout)
test_payoutTest = script do
  alice <- allocateParty "Alice"
  bob <- allocateParty "Bob"
  clara <- allocateParty "Clara"
  pa <- submit alice $ createCmd CallablePayout with giver=alice;receiver=bob
-- 'Bob' should see all consequences
  submit bob $ exerciseCmd pa Transfer with newReceiver = clara

