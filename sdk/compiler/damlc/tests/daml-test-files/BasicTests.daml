variantMatch : Optional Int -> Int
variantMatch mbX =
  case mbX of
    Some x -> x
    None -> 0


listMatch : [Text] -> Text
listMatch l =
  case l of
    h ::_t -> h
    [] -> "<none>"

assertMsgS : Bool -> Text -> Script ()
assertMsgS b msg =
  if not b then abort msg else return ()

assertS : Bool -> Script ()
assertS b = assertMsgS b ""

assertMsg : Bool -> Text -> Update ()
assertMsg b msg  =
  if not b then abort msg else return ()

