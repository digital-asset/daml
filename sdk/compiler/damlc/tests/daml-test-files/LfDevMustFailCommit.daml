-- @SUPPORTS-LF-FEATURE DAML_CONTRACT_KEYS

module LfDevMustFailCommit where

import Daml.Script

template Keyed
  with
    p : Party
    v : Int
  where
    signatory p
    key (p, v) : (Party, Int)
    maintainer key._1

template Helper
  with
    p : Party
  where
    signatory p
    choice C : ContractId Keyed
      controller p
      do create (Keyed p 0)

-- @LEDGER run LfDevMustFailCommit.EXPECTED.ledger
run = do
  p <- allocatePartyWithHint "p" (PartyIdHint "p")
  submit p $ createCmd (Keyed p 0)
  -- This fails when committing the transaction but it
  -- passes Speedy without error.
  -- See LfDevMustFailInterpretation.daml which should produce the same
  -- contract id for the following submit but fails during commit.
  submitMustFail p $ createAndExerciseCmd (Helper p) C
  submit p $ createCmd (Keyed p 1)
