-- | Test that create throws a PreconditionFailed when the precondition is violated.
module ExceptionCreate where

import Daml.Script
import DA.Exception
import DA.Text (isInfixOf)

template MyTemplate
    with
        p : Party
    where
        signatory p
        ensure False

template Test
    with
        p : Party
    where
        signatory p
        choice Call : ()
            controller p
            do
                m <-
                    try do
                        create (MyTemplate p)
                        pure ""
                    catch
                        PreconditionFailed msg ->
                            pure msg
                assert $ "Template precondition violated: MyTemplate {p = 'Alice" `isInfixOf` m

test = script do
    p <- allocatePartyWithHint "Alice" (PartyIdHint "Alice")
    p `submit` createAndExerciseCmd (Test p) Call
