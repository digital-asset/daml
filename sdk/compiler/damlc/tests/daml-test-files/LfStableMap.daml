module LfStableMap where

import Daml.Script
import DA.Map

template MapTemplate
  with
    party: Party
    value: Map Int Text
  where
    signatory party

-- @LEDGER run LfStableMap.EXPECTED.ledger
run = script do
  alice <- allocateParty "Alice"
  submit alice do
     createCmd MapTemplate with
        party = alice
        value = fromList [(2, "a"), (5, "b"), (1, "c")]
