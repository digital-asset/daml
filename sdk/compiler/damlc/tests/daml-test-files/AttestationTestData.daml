module AttestationTestData
  (TestMessage,
   TestData,
   serializeTestMessage,
   signerAddress,
   signerPrivateKey,
   testData,
  ) where

import DA.Crypto.Text

type Address = Bytes32Hex

data TestMessage =
  amount : UInt256
  hookData : BytesHex
  localDepositor : Address
  localToken : Address
  maxFee : UInt256
  nonce : Bytes32Hex
  remoteDomain : UInt32
  remoteRecipient : Bytes32Hex
  remoteToken : Bytes32Hex
  version : UInt32

data TestData =
  message : TestMessage
  encodedMessage : BytesHex
  messageHash : BytesHex
  signature : BytesHex

serializeTestMessage : TestMessage -> BytesHex
serializeTestMessage (TestMessage amount hookData localDepositor localToken maxFee nonce remoteDomain remoteRecipient remoteToken version) =
  "2bcc5ce7" <> version <> amount <> remoteDomain <> remoteToken <> remoteRecipient <> localToken <> localDepositor <> maxFee <> nonce <> (toUInt32 (byteCount hookData)) <> hookData

