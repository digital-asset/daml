-- Check that single constructor enum types don't result in mangled error messages.
-- @ERROR Couldn't match expected type ‘Color’ with actual type ‘Bool’

module SingleConEnumError where

data Color = Red
    deriving (Eq, Show)

isRed : Color -> Bool
isRed = \case
    True -> True
