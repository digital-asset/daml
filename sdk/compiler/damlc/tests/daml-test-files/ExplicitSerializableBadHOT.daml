-- @BUILD-OPTION --explicit-serializable=yes
-- @ERROR range=18:10-21:42; error type checking data type ExplicitSerializableBadHOT.Asset: expected serializable type
module ExplicitSerializableBadHOT where

data NonSerializable = NonSerializable with
  foo : Int
  bar : Party
    deriving (Eq, Show)

data SeriHOT a = SeriHOT with
  payload : a
  label : Text
    deriving (Eq, Serializable, Show)

template Asset
  with
    party : Party
    problematic : SeriHOT NonSerializable
  where
    signatory party
