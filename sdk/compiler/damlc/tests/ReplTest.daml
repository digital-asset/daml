module ReplTest where

import ReplTestIndirect

template T
  with
    proposer : Party
    accepter : Party
  where
    signatory proposer, accepter

template TProposal
  with
    proposer : Party
    accepter : Party
  where
    signatory proposer
    observer accepter
    choice Accept : ContractId T
      controller accepter
      do  myCreate (T proposer accepter)

data D = D
  with
    x : Int
    y : Int
  deriving Show

data NameCollision = NameCollision
  with
    field : Text
  deriving Show

template MessageSize
  with
    p : Party
  where
    signatory p
    choice CreateN : ()
      with
        n : Int
      controller p
      do
        res <- forA [1..n] (\_ -> do
              create this
          )
        return()
