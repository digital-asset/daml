module TestScript where

import Daml.Script

-- Each script lists the known parties to ensure the ledger is called
myScript : Script ()
myScript = do
  _ <- listKnownParties
  debug "Ran myScript"

myOtherScript : Script ()
myOtherScript = do
  _ <- listKnownParties
  debug "Ran myOtherScript"

inputScript : Int -> Script ()
inputScript i = do
  _ <- listKnownParties
  debug $ "Got " <> show i
