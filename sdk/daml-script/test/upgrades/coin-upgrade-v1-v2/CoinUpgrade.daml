  bob <- allocateParty "bob"
  cid <- alice `submit` createCmd Coin_1_0_0.Coin.Coin with
    issuer = alice
    owner = alice
    obs = [bob]
  _ <- bob `submit` createAndExerciseCmd (Aux2 bob) Exercise_Steal_1_0_0 with -- Upgrade
    cid = cid
  pure ()
