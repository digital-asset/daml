#!/usr/bin/env bash
set -euo pipefail

bazel_target="${1:-//compiler/damlc:damlc@ghci@bios}"

hie_bios_flags() {
  bazel run $bazel_target \
    | awk -v execroot="$(bazel info execution_root)" '
      BEGIN { rts_opts = false }
      {
        if (rts_opts) {
          if ($0 == "-RTS") {
            rts_opts = false
          }
        } else if ($0 == "+RTS") {
          rts_opts = true
        } else if (match($0, "-qg|-fexternal-interpreter")) {
        } else if (match($0, "com_github_madler_zlib")) {
        } else if (match($0, "grpc_haskell_core_cbits")) {
        } else if (match($0, "-lmerged_cbits")) {
        } else {
          # Temporary fix for https://github.com/tweag/rules_haskell/issues/2325
          # Remove when upstream is patched.
          sub(execroot "/", "", $0)
          print $0
        }
      }'
}
if [[ -z "${HIE_BIOS_OUTPUT-}" ]]; then
  hie_bios_flags
else
  hie_bios_flags >"$HIE_BIOS_OUTPUT"
fi
