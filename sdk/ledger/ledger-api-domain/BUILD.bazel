load(
    "//bazel_tools:scala.bzl",
    "da_scala_library",
    "da_scala_test_suite",
)

da_scala_library(
    name = "ledger-api-domain",
    srcs = glob(["src/main/scala/**/*.scala"]),
    scala_deps = [
        "@maven//:org_scalaz_scalaz_core",
    ],
    tags = ["maven_coordinates=com.daml:ledger-api-domain:__VERSION__"],
    visibility = [
        "//visibility:public",
    ],
    deps = [
        "//daml-lf/data",
        "//daml-lf/transaction",
    ],
)

da_scala_library(
    name = "ledger-api-domain-tests-lib",
    srcs = glob(
        ["src/test/**/*.scala"],
        exclude = [
            "src/test/**/*Spec.scala",
            "src/test/**/*Test.scala",
        ],
    ),
    scala_deps = [
        "@maven//:org_scalaz_scalaz_core",
    ],
    visibility = [
        "//visibility:public",
    ],
    deps = [
        ":ledger-api-domain",
        "//daml-lf/data",
    ],
)

da_scala_test_suite(
    name = "ledger-api-domain-tests",
    size = "small",
    srcs = glob(["src/test/suite/scala/**/*.scala"]),
    scala_deps = [
        "@maven//:org_scalatest_scalatest",
        "@maven//:org_scalaz_scalaz_core",
    ],
    deps = [
        ":ledger-api-domain",
        ":ledger-api-domain-tests-lib",
        "//daml-lf/data",
    ],
)
