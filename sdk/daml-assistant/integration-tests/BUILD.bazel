load("//bazel_tools:haskell.bzl", "da_haskell_library", "da_haskell_repl", "da_haskell_test")
load("@os_info//:os_info.bzl", "is_windows")
load("@build_environment//:configuration.bzl", "mvn_version")

# A REPL with all tests, used as bios for HLS
da_haskell_repl(
    name = "tests@ghci",
    testonly = True,
    deps = [
        ":integration-test-utils",
        ":integration-tests",
    ],
)

os_dependent_libraries = [] if is_windows else [
    "//language-support/js/daml-types:npm_package",
    "@script_nix//:bin/script",
]

da_haskell_library(
    name = "integration-test-utils",
    srcs = ["src/DA/Daml/Assistant/IntegrationTestUtils.hs"],
    hackage_deps = [
        "aeson",
        "base",
        "bytestring",
        "conduit",
        "conduit-extra",
        "extra",
        "filepath",
        "hashable",
        "tasty",
        "text",
        "unordered-containers",
    ],
    src_strip_prefix = "src",
    visibility = ["//visibility:public"],
    deps = [
        "//libs-haskell/bazel-runfiles",
        "//libs-haskell/da-hs-base",
        "//libs-haskell/test-utils",
    ],
)

da_haskell_test(
    name = "integration-tests",
    timeout = "long",
    srcs = [
        "src/DA/Daml/Assistant/IntegrationTests.hs",
    ],
    args = [
        "$(location //:yarn)",
    ],
    data = [
        "//release:dpm-sdk-release-tarball",
        "//release:sdk-release-tarball",
        "@local_jdk//:bin/java.exe" if is_windows else "@local_jdk//:bin/java",
        "//:yarn",
        "//compiler/damlc/tests:generate-simple-dalf",
    ] + os_dependent_libraries,
    # marked flaky for mvn originally; still flaky now? #14281
    flaky = False,
    hackage_deps = [
        "aeson",
        "base",
        "bytestring",
        "extra",
        "filepath",
        "http-client",
        "http-types",
        "lens",
        "lens-aeson",
        "monad-loops",
        "process",
        "stm",
        "tasty",
        "tasty-hunit",
        "text",
        "vector",
    ],
    main_function = "DA.Daml.Assistant.IntegrationTests.main",
    tags = ["cpu:2"],
    visibility = ["//visibility:public"],
    deps = [
        ":integration-test-utils",
        "//daml-assistant/daml-helper:daml-helper-lib",
        "//language-support/hs/bindings:hs-ledger",
        "//libs-haskell/bazel-runfiles",
        "//libs-haskell/da-hs-base",
        "//libs-haskell/test-utils",
        "//sdk-version/hs:sdk-version-lib",
    ],
)
