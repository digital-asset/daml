load(
    "//bazel_tools:scala.bzl",
    "da_scala_library",
    "da_scala_test",
    "lf_scalacopts",
    "lf_scalacopts_stricter",
)

da_scala_library(
    name = "parser",
    srcs = glob(["src/main/**/*.scala"]),
    scala_deps = [
        "@maven//:org_scala_lang_modules_scala_parser_combinators",
        "@maven//:org_scalaz_scalaz_core",
    ],
    scalacopts = lf_scalacopts_stricter,
    tags = ["maven_coordinates=com.daml:daml-lf-parser:__VERSION__"],
    visibility = [
        "//canton/community/daml-lf:__subpackages__",
        "//daml-assistant/upgrade-check-main:__subpackages__",
    ],
    deps = [
        "//canton:scala-utils",
        "//canton/community/daml-lf/data",
        "//canton/community/daml-lf/language",
        "//canton/community/daml-lf/stable-packages",
    ],
)

da_scala_test(
    name = "parser-test",
    size = "small",
    srcs = glob(["src/test/**/*.scala"]),
    scala_deps = [
        "@maven//:org_scalacheck_scalacheck",
        "@maven//:org_scalatest_scalatest_wordspec",
        "@maven//:org_scalatestplus_scalacheck_1_15",
    ],
    scalacopts = lf_scalacopts,
    visibility = [
        "//canton/community/daml-lf:__subpackages__",
    ],
    deps = [
        ":parser",
        "//canton/community/daml-lf/data",
        "//canton/community/daml-lf/language",
    ],
)
