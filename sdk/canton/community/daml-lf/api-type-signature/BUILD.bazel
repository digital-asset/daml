load(
    "//bazel_tools:scala.bzl",
    "da_scala_library",
    "da_scala_test",
    "lf_scalacopts",
)
load("//rules_daml:daml.bzl", "daml_compile")
load("//canton/community/daml-lf/language:daml-lf.bzl", "DEFAULT_LF_VERSION")
load("//bazel_tools:scala.bzl", "lf_scalacopts")
load("@os_info//:os_info.bzl", "is_intel")

scalacopts = lf_scalacopts + [
    "-Xlint:implicit-recursion",
    "-Xlint:nonlocal-return",
    "-Xlint:nullary-unit",
    "-P:wartremover:traverser:org.wartremover.warts.NonUnitStatements",
]

da_scala_library(
    name = "api-type-signature",
    srcs = glob(["src/main/**/*.scala"]),
    scala_deps = [
        "@maven//:com_typesafe_scala_logging_scala_logging",
        "@maven//:org_scalaz_scalaz_core",
    ],
    scalacopts = scalacopts,
    tags = ["maven_coordinates=com.daml:daml-lf-api-type-signature:__VERSION__"],
    visibility = [
        "//canton:__subpackages__",
        "//canton-3x:__subpackages__",
        "//canton/community/daml-lf:__subpackages__",
        "//daml-assistant/daml-sdk:__subpackages__",
        "//daml-script:__subpackages__",
        "//language-support:__subpackages__",
        "//ledger-service:__subpackages__",
    ],
    deps = [
        "//canton:nonempty",
        "//canton/community/daml-lf/archive:daml_lf_archive_proto_java",
        "//canton/community/daml-lf/archive:daml_lf_archive_reader",
        "//canton/community/daml-lf/data",
        "//canton/community/daml-lf/language",
        "@maven//:com_google_protobuf_protobuf_java",
        "@maven//:org_slf4j_slf4j_api",
    ],
)

daml_compile(
    name = "InterfaceTestPackage-v2",
    srcs = glob(
        ["src/test/daml/**/*.daml"],
        exclude = ["src/test/daml/**/*Retro*.daml"],
    ),
    enable_interfaces = True,
    target = DEFAULT_LF_VERSION,
)

daml_compile(
    name = "InterfaceTestPackage-v1",
    srcs = glob(["src/test/daml/**/*.daml"]),
    target = "1.15",
) if is_intel else None

da_scala_test(
    name = "tests",
    size = "small",
    srcs = glob(["src/test/**/*.scala"]),
    data = [":InterfaceTestPackage-v2.dar"] + ([":InterfaceTestPackage-v1.dar"] if is_intel else []),
    scala_deps = [
        "@maven//:org_scalacheck_scalacheck",
        "@maven//:org_scalatest_scalatest_wordspec",
        "@maven//:org_scalaz_scalaz_core",
    ],
    scalacopts = lf_scalacopts,
    deps = [
        ":api-type-signature",
        "//bazel_tools/runfiles:scala_runfiles",
        "//canton:nonempty",
        "//canton/community/daml-lf/archive:daml_lf_archive_proto_java",
        "//canton/community/daml-lf/archive:daml_lf_archive_reader",
        "//canton/community/daml-lf/data",
        "//canton/community/daml-lf/language",
        "//canton/community/daml-lf/parser",
        "//canton/community/daml-lf/transaction:transaction-test-lib",
        "@maven//:com_google_protobuf_protobuf_java",
    ],
)
