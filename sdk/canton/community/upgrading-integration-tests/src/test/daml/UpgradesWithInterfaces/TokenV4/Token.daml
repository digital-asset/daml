module Token where

import qualified HoldingV1
import qualified HoldingV2

template Token
  with
    owner: Party
    assetId: Text
    expiry: Optional Time -- added in 3.0.0
  where
    signatory owner

    interface instance HoldingV1.Holding for Token where
      view = HoldingV1.HoldingView with owner = owner, assetId = assetId

    -- changed in 4.0.0: expiry = None (considering it a bug)
    interface instance HoldingV2.Holding for Token where
      view = HoldingV2.HoldingView with owner = owner, assetId = assetId, expiry = None
