module SubViewsAsset where

template Asset
  with
    sig : Party
  where
    signatory sig

    choice Cycle : ContractId Asset
      with
        ctl : Party
        factoryId : ContractId AssetFactory
      controller ctl
        do exercise factoryId (CreateAsset sig)

template AssetFactory
  with
    sig : Party
  where
    signatory sig

    choice CreateAsset : ContractId Asset
      with
        ctl : Party
      controller ctl
        do
          create (Asset sig)
