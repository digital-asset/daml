module Dep (module Dep, Script) where

import Daml.Script

template T0
  with
    party : Party
  where
    signatory party

    nonconsuming choice C0 : Bool
     controller party
        do pure True

run : Script ()
run = script do
  alice <- allocateParty "alice"

  t <- alice `submit` createCmd T0 with party = alice
  b <- alice `submit` exerciseCmd t C0
  debug b
  alice `submit` archiveCmd t
