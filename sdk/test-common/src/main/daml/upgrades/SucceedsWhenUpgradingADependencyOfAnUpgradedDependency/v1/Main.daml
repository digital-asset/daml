module Main where

import qualified Dep

data D = D { field1 : Text }

template T with
    p: Party
    t: ContractId Dep.T
  where
    signatory p
    choice C1 : D
      controller p
      do
        depD <- exercise t Dep.C1
        pure $ D "field1"
    choice C2 : Dep.DepDepWrapper
      controller p
      do Dep.DepDepWrapper . Dep.depDep <$> exercise t Dep.C1 -- only works when party is same

