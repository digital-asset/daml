{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2015"
     ],
    "jsx": "react",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "outDir": "lib/",
    "module": "CommonJS",
    "declaration": true,
    "sourceMap": true,
    // those two options are needed to find @mojotech/json-type-validation validation library
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/*"]
    }
  }
}
