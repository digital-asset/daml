load(
    "//rules_daml:daml.bzl",
    "daml_build_test",
    "daml_compile",
)
load(
    "//daml-lf/language:daml-lf.bzl",
    "LF_MAJOR_VERSIONS",
    "lf_version_default_or_latest",
    "mangle_for_damlc",
)
load("@os_info//:os_info.bzl", "is_intel")

VERSIONS_TO_TEST = [
    "1.15",
    "1.17",
]

[
    daml_compile(
        name = "{name}-{version}".format(
            name = name,
            version = mangle_for_damlc(version),
        ),
        srcs = ["%s.daml" % name],
        target = version,
        visibility = ["//daml-lf:__subpackages__"],
    )
    for name in [
        "Exceptions",
        "InterfaceViews",
        "Interfaces",
        "MultiKeys",
    ]
    for version in VERSIONS_TO_TEST
]

[
    daml_build_test(
        name = "InterfaceRetro-%s" % mangle_for_damlc(version),
        dar_dict = {
            "//daml-lf/tests:Interfaces-%s.dar" % mangle_for_damlc(version): "interfaces.dar",
        },
        project_dir = "interface-retro",
        visibility = ["//daml-lf:__subpackages__"],
    )
    for version in ["1.15"]
]

daml_build_test(
    name = "ReinterpretTests-v1",
    dar_dict = {
        "//daml-lf/tests:AtVersion13.dar": "at-version-13.dar",
        "//daml-lf/tests:AtVersion14.dar": "at-version-14.dar",
    },
    project_dir = "reinterpret-v1",
    visibility = ["//daml-lf:__subpackages__"],
) if is_intel else None

daml_compile(
    name = "AtVersion13",
    srcs = ["reinterpret-v1/AtVersion13.daml"],
    target = "1.13",
    visibility = ["//daml-lf:__subpackages__"],
) if is_intel else None

daml_compile(
    name = "AtVersion14",
    srcs = ["reinterpret-v1/AtVersion14.daml"],
    target = "1.14",
    visibility = ["//daml-lf:__subpackages__"],
)
