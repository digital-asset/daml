load(
    "//bazel_tools:scala.bzl",
    "da_scala_library",
    "da_scala_test_suite",
    "lf_scalacopts_stricter",
)
load(
    "//canton/community/daml-lf/language:daml-lf.bzl",
    "DEV_LF_VERSION",
    "mangle_for_damlc",
)
load(
    "//rules_daml:daml.bzl",
    "daml_compile",
)

da_scala_library(
    name = "stable-packages",
    srcs = glob(["src/main/scala/**/*.scala"]),
    resources = [
        "//compiler/damlc/stable-packages",
        "//compiler/damlc/stable-packages:gen-stable-packages-manifest-v2",
    ],
    scalacopts = lf_scalacopts_stricter,
    tags = ["maven_coordinates=com.daml:daml-lf-stable-packages:__VERSION__"],
    visibility = ["//visibility:public"],
    deps = [
        "//canton/community/daml-lf/archive:daml_lf_archive_reader",
        "//canton/community/daml-lf/data",
        "//canton/community/daml-lf/language",
        "@maven//:com_google_protobuf_protobuf_java",
    ],
)

[
    daml_compile(
        name = "Simple-{}".format(mangle_for_damlc(version)),
        srcs = ["src/test/daml/Simple.daml"],
        target = version,
    )
    for version in [DEV_LF_VERSION]
]

da_scala_test_suite(
    name = "stable-packages-test",
    size = "small",
    srcs = glob(["src/test/scala/**/*.scala"]),
    data = [
        ":Simple-{}.dar".format(mangle_for_damlc(version))
        for version in [DEV_LF_VERSION]
    ],
    scala_deps = [
        "@maven//:org_scalatest_scalatest_wordspec",
        "@maven//:org_scalaz_scalaz_core",
    ],
    scalacopts = lf_scalacopts_stricter,
    deps = [
        ":stable-packages",
        "//bazel_tools/runfiles:scala_runfiles",
        "//canton/community/daml-lf/archive:daml_lf_archive_reader",
        "//canton/community/daml-lf/data",
        "//canton/community/daml-lf/language",
    ],
)
