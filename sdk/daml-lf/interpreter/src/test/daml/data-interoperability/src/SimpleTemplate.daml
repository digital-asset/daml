module SimpleTemplate where

template SimpleTemplate
    with
        owner: Party
        count: Int
    where
        signatory owner

        choice SimpleTemplate_increment : ContractId SimpleTemplate
            controller owner
            do debug("called Daml SimpleTemplate_increment with count = " <> (show count))
               create this with
                   count = count + 1

