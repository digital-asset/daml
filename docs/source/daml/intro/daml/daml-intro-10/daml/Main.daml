-- CLASS_BEGIN
class HasQuantity a q where
  getQuantity : a -> q
  setQuantity : q -> a -> a
-- CLASS_END

-- INSTANCE_BEGIN
data Foo = Foo with
  amount : Decimal

instance HasQuantity Foo Decimal where
  getQuantity foo = foo.amount
  setQuantity amount foo = foo with amount
-- INSTANCE_END

