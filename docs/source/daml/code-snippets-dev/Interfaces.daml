  viewtype EmptyInterfaceView
-- INTERFACE_TRANSITIVE_REQUIRES_INCORRECT_END
-}

-- INTERFACE_TRANSITIVE_REQUIRES_CORRECT_BEGIN
interface Square requires Rectangle, Shape where
  viewtype EmptyInterfaceView
-- INTERFACE_TRANSITIVE_REQUIRES_CORRECT_END

-- TEMPLATE_HEADER_BEGIN
template MyTemplate
  with
    field1 : Party
    field2 : Int
  where
    signatory field1
-- TEMPLATE_HEADER_END
-- INTERFACE_INSTANCE_IN_TEMPLATE_BEGIN
    interface instance MyInterface for MyTemplate where
      view = MyInterfaceViewType "MyTemplate" 100
      method1 = field1
      method2 = field2
      method3 False _ _ = 0
      method3 True x y
        | x > 0 = x + y
        | otherwise = y
-- INTERFACE_INSTANCE_IN_TEMPLATE_END
-- EMPTY_INTERFACE_INSTANCE_BEGIN
    interface instance YourInterface for MyTemplate where
      view = EmptyInterfaceView
-- EMPTY_INTERFACE_INSTANCE_END

-- INTERFACE_INSTANCE_IN_INTERFACE_BEGIN
interface MyNewInterface where
  viewtype EmptyInterfaceView
  myNewMethod1 : Party
  myNewMethod2 : Int -> Int

  choice MyNewChoice : Int
    controller myNewMethod1 this
    do pure $ myNewMethod2 this 0

  interface instance MyNewInterface for MyTemplate where
    view = EmptyInterfaceView
    myNewMethod1 = field1
    myNewMethod2 x = field2 `min` x
-- INTERFACE_INSTANCE_IN_INTERFACE_END
