-- INTERFACE_TRANSITIVE_REQUIRES_INCORRECT_END
-}

-- INTERFACE_TRANSITIVE_REQUIRES_CORRECT_BEGIN
interface Square requires Rectangle, Shape where
  viewtype ()
-- INTERFACE_TRANSITIVE_REQUIRES_CORRECT_END

-- TEMPLATE_HEADER_BEGIN
template MyTemplate
  with
    field1 : Party
    field2 : Int
  where
    signatory field1
-- TEMPLATE_HEADER_END
-- TEMPLATE_IMPLEMENTS_BEGIN
    implements MyInterface where
      view = "MyTemplate"
      method1 = field1
      method2 = field2
      method3 False _ _ = 0
      method3 True x y
        | x > 0 = x + y
        | otherwise = y
-- TEMPLATE_IMPLEMENTS_END
