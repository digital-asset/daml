module Main where

import Daml.Script

import Cash qualified
import NFT qualified

import IAsset qualified

data Parties = Parties with
    alice
      , bob
      , charlie
      , dominic
      , emily
      : Party
  deriving (Eq, Ord, Show)

allocateParties : Script Parties
allocateParties = do
  alice <- allocateParty "alice"
  bob <- allocateParty "bob"
  charlie <- allocateParty "charlie"
  dominic <- allocateParty "dominic"
  emily <- allocateParty "emily"
  pure Parties with ..

cashTest : Script ()
cashTest = do
  Parties {..} <- allocateParties

  aliceUsd <-
    alice `submit` do
      createCmd Cash.Cash with
        issuer = alice
        owner = alice
        currency = "USD"
        amount = 42.0

  bobUsdTransferProposal <-
    alice `submit` do
      exerciseCmd aliceUsd Cash.ProposeCashTransfer with
        newOwner = bob

  bobUsd <-
    bob `submit` do
      exerciseCmd bobUsdTransferProposal Cash.AcceptCashTransferProposal

  charlieUsdTransferProposal <-
    bob `submit` do
      exerciseCmd bobUsd Cash.ProposeCashTransfer with
        newOwner = charlie

  charlieUsd <-
    charlie `submit` do
      exerciseCmd charlieUsdTransferProposal Cash.AcceptCashTransferProposal

  dominicUsdTransferProposal <-
    charlie `submit` do
      exerciseCmd charlieUsd Cash.ProposeCashTransfer with
        newOwner = dominic

  charlieUsd' <-
    dominic `submit` do
      exerciseCmd dominicUsdTransferProposal Cash.RejectCashTransferProposal

  emilyUsdTransferProposal <-
    charlie `submit` do
      exerciseCmd charlieUsd' Cash.ProposeCashTransfer with
        newOwner = emily

  charlieUsd'' <-
    charlie `submit` do
      exerciseCmd emilyUsdTransferProposal Cash.WithdrawCashTransferProposal

  pure ()

