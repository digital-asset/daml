  aliceAsset <-
    alice `submit` do
      toInterfaceContractId @IAsset.IAsset <$>
        createCmd (mkAsset alice)

  bobAssetTransferProposal <-
    alice `submit` do
      exerciseCmd aliceAsset IAsset.ProposeIAssetTransfer with
        newOwner = bob

  bobAsset <-
    bob `submit` do
      exerciseCmd bobAssetTransferProposal IAsset.AcceptIAssetTransferProposal

  charlieAssetTransferProposal <-
    bob `submit` do
      exerciseCmd bobAsset IAsset.ProposeIAssetTransfer with
        newOwner = charlie

