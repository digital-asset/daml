mkCash : Party -> Cash.Cash
mkCash party = Cash.Cash with
  issuer = party
  owner = party
  currency = "USD"
  amount = 42.0

cashAssetTest : Script ()
cashAssetTest = mkAssetTest mkCash

cashArchiveAssetTest : Script ()
