-- start code snippet: template data types
template Iou
  with
    issuer: Party
    owner: Party
    currency: Text
    amount: Decimal
  where
-- end code snippet: template data types
    signatory issuer
    observer owner
-- start code snippet: choice data types
    nonconsuming choice DoNothing: ()
      controller owner
      do
        return ()

    choice Transfer: ContractId Iou
      with newOwner: Party
      controller owner
      do
        updateOwner newOwner
