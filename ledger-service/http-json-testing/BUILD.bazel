        scalacopts = hj_scalacopts,
        tags = ["maven_coordinates=com.daml:http-json-testing:__VERSION__"],
        visibility = ["//visibility:public"],
        runtime_deps = [
            "@maven//:ch_qos_logback_logback_classic",
