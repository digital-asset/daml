module CIou where

import IIou
import Transferrable (Transferrable)

template CIou with
    issuer : Party
    owner : Party
    amount : Text
  where
  signatory issuer
  key issuer: Party
  maintainer key

  implements IIou where
    view = EmptyInterfaceView
    getOwner = owner

  implements Transferrable where
    view = EmptyInterfaceView
    getOwner = owner

  choice Overridden : Text with
      echo : (Text, Text)
    controller owner
    do
      pure $ show echo <> " invoked CIou.Overridden"
