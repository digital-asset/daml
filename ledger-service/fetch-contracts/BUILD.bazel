    runtime_deps = [
        "@maven//:ch_qos_logback_logback_classic",
        "@maven//:org_codehaus_janino_janino",
    ],
    deps = [
        "//daml-lf/data",
        "//daml-lf/language",
        "//daml-lf/transaction",
