load(
    "//bazel_tools:haskell.bzl",
    "c2hs_suite",
    "da_haskell_binary",
    "da_haskell_library",
    "da_haskell_test",
)
load("//bazel_tools:fat_cc_library.bzl", "fat_cc_library")

# FIXME: The files in the chs directory should be generated on-the-fly using
# c2hs_suite. This is currently not the case, because c2hs fails on Windows.
# See https://github.com/digital-asset/daml/pull/532.
da_haskell_library(
    name = "grpc-haskell-core",
    srcs = [
        "src/Network/GRPC/Unsafe/Constants.hsc",
    ] + glob(["src/**/*.hs"]) + glob(["chs/**/*.hs"]),
    compiler_flags = ["-XCPP"],
    hazel_deps = [
        "async",
        "base",
        "bytestring",
        "clock",
        "containers",
        "managed",
        "pipes",
        "proto3-suite",
        "proto3-wire",
        "safe",
        "sorted-list",
        "stm",
        "tasty-hunit",
        "tasty-quickcheck",
        "tasty",
        "transformers",
        "vector",
    ],
    visibility = ["//visibility:public"],
    deps = [
        ":fat_cbits",
    ],
)

cc_library(
    name = "cbits",
    srcs = glob(["cbits/*.c"]),
    hdrs = glob(["include/*.h"]),
    includes = ["include/"],
    visibility = ["//visibility:public"],
    deps = [
        "@com_github_grpc_grpc//:grpc",
    ],
)

fat_cc_library(
    name = "fat_cbits",
    input_lib = ":cbits",
)
