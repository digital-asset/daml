load("//bazel_tools:haskell.bzl", "da_haskell_binary", "da_haskell_library", "da_haskell_test")

da_haskell_library(
    name = "grpc-haskell",
    srcs = glob(["src/**/*.hs"]),
    hazel_deps = [
        "base",
        "bytestring",
        "async",
        "proto3-wire",
        "proto3-suite",
    ],
    src_strip_prefix = "src",
    visibility = ["//visibility:public"],
    deps = [
        "//nix/third-party/gRPC-haskell/core:grpc-haskell-core",
    ],
)

da_haskell_binary(
    name = "hellos-server",
    srcs = glob(["examples/hellos/hellos-server/*.hs"]),
    hazel_deps = [
        "base",
        "async",
        "bytestring",
        "containers",
        "text",
        "transformers",
        "proto3-wire",
        "proto3-suite",
    ],
    src_strip_prefix = "examples/hellos/hellos-server",
    deps = [
        ":grpc-haskell",
        "//nix/third-party/gRPC-haskell/core:grpc-haskell-core",
    ],
)

da_haskell_binary(
    name = "hellos-client",
    srcs = glob(["examples/hellos/hellos-client/*.hs"]),
    hazel_deps = [
        "base",
        "async",
        "bytestring",
        "containers",
        "text",
        "transformers",
        "proto3-wire",
        "proto3-suite",
    ],
    src_strip_prefix = "examples/hellos/hellos-client",
    deps = [
        ":grpc-haskell",
        "//nix/third-party/gRPC-haskell/core:grpc-haskell-core",
    ],
)
