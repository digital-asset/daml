{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "sourceMap": true,

    /* Strict compiler mode options */
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    /* Build paths related options */
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@da/redux-router": ["src/redux-router/src"],
      "@da/ui-core": ["src/ui-core/src"],
      "@da/ui-core/lib/*": ["src/ui-core/src/*"],
    },
    /* One of the dev dependencies includes Node.JS typings. We don't want them. */
    "types": []
  },
  "exclude": [
    "node_modules"
  ]
}
