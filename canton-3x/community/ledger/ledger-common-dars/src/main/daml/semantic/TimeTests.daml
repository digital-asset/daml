module TimeTests where

template TimeChecker
  with
    party: Party
    anchor: Time
  where
    signatory party

    nonconsuming choice TimeChecker_CheckTime : ()
      controller party
      do
        currentTime <- getTime
        assert (anchor == currentTime)
        return ()
