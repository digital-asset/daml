jsonBasic : Party -> Script Int
jsonBasic p = do
  cid <- submit p $ createCmd (TProposal p p)
  (cid, r) <- submit p $ exerciseCmd cid Accept
  results <- query @T p
  results === [(cid, T p p)]
  pure r

