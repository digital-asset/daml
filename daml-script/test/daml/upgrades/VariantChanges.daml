downgradeFromNewCon : Script ()
downgradeFromNewCon = do
  a <- allocatePartyOn "alice" participant0
  cid <- a `submit` createCmd V2.VariantAddCon with
    party = a
    varData = V2.VariantAddConData3 with
      vad_field_3_1 = True
      vad_field_3_2 = "hello"

  let cidV1 = coerceContractId @V2.VariantAddCon @V1.VariantAddCon cid

  -- Ensure we can only call the V1 choice
  res <- a `trySubmit` exerciseExactCmd cidV1 V1.VariantAddConCall

  case res of
    Left (UnknownError msg) | "An error occurred." `isInfixOf` msg -> pure ()
    _ -> assertFail $ "Expected specific failure but got " <> show res

