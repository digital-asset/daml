template V1Utils
  with
    party : Party
  where
    signatory party
    choice V1Fetch : ValidUpgrade with
        cid : ContractId ValidUpgrade
      controller party
      do fetch cid

    choice V1SameChoiceExercise : Text with
        cid : ContractId ValidUpgrade
      controller party
      do exercise cid SameTypeChoice
