template ValidUpgradeUtils
  with
    party : Party
  where
    signatory party
    choice ValidUpgradeFetch : ValidUpgrade with
        cid : ContractId ValidUpgrade
      controller party
      do fetch cid

    choice SameChoiceExercise : Text with
        cid : ContractId ValidUpgrade
      controller party
      do exercise cid SameTypeChoice

