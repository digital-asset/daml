    name = "script-test-1.dev",
    srcs =
        glob(["**/*.daml"]) + ["//daml-script/daml:daml-script-1.dev.dar"],
    outs = ["script-test-1.dev.dar"],
    cmd = """
      set -eou pipefail
      TMP_DIR=$$(mktemp -d)
