module Coin where

template Coin
  with
    issuer : Party
    owner : Party
    obs : [Party]
  where
    signatory issuer, owner
    observer obs

    nonconsuming choice V2Choice : ()
      controller owner
      do pure ()

    choice V2Steal : ContractId Coin
      with newOwner : Party
      controller newOwner
      do create this with owner = newOwner
